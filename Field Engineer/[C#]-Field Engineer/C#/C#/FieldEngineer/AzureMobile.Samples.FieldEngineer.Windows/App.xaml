<Application
    x:Class="AzureMobile.Samples.FieldEngineer.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:common="using:AzureMobile.Samples.FieldEngineer.Common"
    RequestedTheme="Light">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <!-- 
                    Styles that define common aspects of the platform look and feel
                    Required by Visual Studio project and item templates
                 -->
                <ResourceDictionary Source="Branding/CustomTemplates.xaml" />
                <ResourceDictionary Source="Branding/CustomStyles.xaml" />

            </ResourceDictionary.MergedDictionaries>
            <!-- Application-specific resources -->
            <common:JobCardTemplateSelector x:Key="JobCardTemplateSelector"/>
            <common:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <x:String x:Key="AppName">Field Engineer</x:String>
        </ResourceDictionary>
    </Application.Resources>
</Application>
