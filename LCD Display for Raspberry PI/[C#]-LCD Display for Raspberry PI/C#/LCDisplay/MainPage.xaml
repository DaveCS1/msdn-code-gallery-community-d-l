<Page
    x:Class="LCDisplay.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="Assets/hardware.png" Opacity="0.6"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Vertical" Grid.Column="1" Grid.Row="1">
            <Button Content="Clear Display"  Width="200" Margin="0,0,20,0" Click="Button_Click" Background="{ThemeResource AccentButtonBackground}" />
            <Button Content="Example Message" Width="200" Margin="0,20,20,0" Click="Button_Click_1" Background="{ThemeResource AccentButtonBackground}" />
        </StackPanel>
        <Button Content="Exit Application" Grid.Column="1" HorizontalAlignment="Left" Grid.Row="1" Width="200" VerticalAlignment="Bottom" Click="Button_Click_2" Background="{ThemeResource AccentButtonBackground}"/>
    </Grid>
</Page>
